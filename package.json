{
    "name": "jira-assistant",
    "version": "2.59.0",
    "description": "Help to track & upload work done on a Jira Ticket on timely basis and generate Worklog, Sprint and other custom reports",
    "homepage": "/",
    "author": {
        "name": "Shridhar TL",
        "email": "shridhar.tl@gmail.com"
    },
    "bugs": {
        "url": "https://jiraassistant.com/contact-us"
    },
    "private": true,
    "license": "MIT",
    "types": "./src/services/index.d.ts",
    "main": "./src/electron/index.js",
    "build": {
        "extends": null,
        "appId": "com.jiraassistant.app",
        "productName": "Jira Assistant",
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "dmg": {
            "icon": false
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Utility"
        },
        "files": [
            "build/**/*",
            "**/node_modules/electron",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin"
        ],
        "extraMetadata": {
            "main": "./build/electron.js"
        },
        "win": {
            "target": {
                "target": "zip",
                "arch": [
                    "x64"
                ]
            }
        }
    },
    "dependencies": {
        "@forge/api": "^4.1.2",
        "@forge/bridge": "^4.2.0",
        "@forge/resolver": "^1.6.3",
        "@fortawesome/fontawesome-free": "^6.7.2",
        "@fullcalendar/core": "^6.1.15",
        "@fullcalendar/daygrid": "^6.1.15",
        "@fullcalendar/interaction": "^6.1.15",
        "@fullcalendar/list": "^6.1.15",
        "@fullcalendar/moment": "^6.1.15",
        "@fullcalendar/react": "^6.1.15",
        "@fullcalendar/timegrid": "^6.1.15",
        "bootstrap": "^5.3.3",
        "bootstrap-daterangepicker": "^3.1.0",
        "chart.js": "^4.4.7",
        "classnames": "^2.5.1",
        "dexie": "^4.0.10",
        "electron-about-window": "^1.15.2",
        "electron-is-dev": "^3.0.1",
        "electron-updater": "^6.1.8",
        "espree": "^9.6.1",
        "exceljs": "^4.4.0",
        "firebase": "^10.12.0",
        "jquery": "^3.7.1",
        "js-sql-parser": "^1.6.0",
        "jsd-report": "^0.1.11",
        "jspdf": "github:shridhar-tl/jsPDF",
        "minify-html-literals": "^1.3.5",
        "jspdf-autotable": "^3.8.2",
        "moment": "^2.30.1",
        "moment-timezone": "^0.5.45",
        "papaparse": "^5.4.1",
        "patternomaly": "^1.3.2",
        "primeflex": "^3.3.1",
        "primeicons": "^6.0.1",
        "primereact": "^9.6.4",
        "queue": "^7.0.0",
        "rc-time-picker": "^3.7.3",
        "react": "^18.3.1",
        "react-bootstrap-daterangepicker": "^8.0.0",
        "react-controls": "github:shridhar-tl/react-controls",
        "react-dnd": "^14.0.4",
        "react-dnd-html5-backend": "^14.0.2",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.23.1",
        "static-eval": "^2.1.1",
        "vite": "^5.4.10",
        "vite-plugin-alias": "^0.1.1",
        "vite-plugin-env-compatible": "^2.0.1",
        "vite-plugin-eslint": "^1.8.1",
        "vite-plugin-html": "^3.2.2",
        "zustand": "^5.0.2"
    },
    "devDependencies": {
        "concurrently": "^9.1.0",
        "cross-env": "^7.0.3",
        "electron": "^33.1.1",
        "electron-builder": "^25.1.8",
        "electronmon": "^2.0.3",
        "eslint": "^9.17.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "gh-pages": "^6.1.1",
        "sass": "^1.83.0",
        "wait-on": "^8.0.1",
        "webpack-bundle-analyzer": "^4.10.2"
    },
    "scripts": {
        "start": "cross-env VITE_BUILD_MODE=WEB vite",
        "start-extn": "cross-env VITE_BUILD_MODE=EXTN vite",
        "start-app": "concurrently -k npm:app:*",
        "build": "cross-env VITE_BUILD_MODE=EXTN GENERATE_SOURCEMAP=false vite build",
        "postbuild": "cross-env VITE_BUILD_MODE=EXTN node post-build.js",
        "publish-extn": "gh-pages -d dist -b ja-extn",
        "build-web": "cross-env VITE_BUILD_MODE=WEB GENERATE_SOURCEMAP=false vite build",
        "postbuild-web": "cross-env VITE_BUILD_MODE=WEB node post-build.js",
        "deploy-web": "echo app.jiraassistant.com > ./dist/CNAME && gh-pages -d dist",
        "build-app": "cross-env VITE_BUILD_MODE=APP GENERATE_SOURCEMAP=false vite build",
        "postbuild-app": "cross-env VITE_BUILD_MODE=APP node post-build.js",
        "deploy-app": "gh-pages -d dist --dotfiles true -b ja-app",
        "start-plugin": "cross-env VITE_BUILD_MODE=PLUGIN PORT=6060 vite",
        "build-plugin": "cross-env VITE_BUILD_MODE=PLUGIN PUBLIC_URL=. GENERATE_SOURCEMAP=false vite build",
        "postbuild-plugin": "cross-env VITE_BUILD_MODE=PLUGIN node post-build.js",
        "test": "vite test",
        "app:web": "cross-env VITE_BUILD_MODE=APP vite",
        "app:electron": "wait-on tcp:80 && electron .",
        "postinstall": "electron-builder install-app-deps"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "rules": {
            "arrow-body-style": [
                "error",
                "as-needed"
            ],
            "no-unused-vars": "error",
            "no-unreachable": "error",
            "eqeqeq": "error",
            "semi": "error",
            "no-var": "error",
            "no-use-before-define": "error",
            "no-constant-condition": "error",
            "no-dupe-args": "error",
            "no-duplicate-case": "error",
            "no-empty": "error",
            "no-extra-boolean-cast": "warn",
            "no-extra-semi": "error",
            "no-alert": "error",
            "no-caller": "error",
            "no-irregular-whitespace": "error",
            "guard-for-in": "error",
            "valid-typeof": "error",
            "no-empty-function": "error",
            "no-empty-pattern": "error",
            "no-eq-null": "error",
            "no-extend-native": "error",
            "template-curly-spacing": "error",
            "no-new-wrappers": "error",
            "no-self-compare": "error",
            "no-sequences": "error",
            "no-throw-literal": "error",
            "no-unmodified-loop-condition": "error",
            "no-debugger": "warn",
            "complexity": "error",
            "curly": "error",
            "no-const-assign": "error",
            "array-bracket-newline": "error",
            "no-confusing-arrow": "error",
            "prefer-const": "error",
            "prefer-numeric-literals": "error",
            "prefer-template": "error",
            "max-len": [
                "error",
                300,
                2
            ]
        }
    },
    "browserslist": {
        "production": [
            "last 1 electron version",
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version",
            "not ie >= 0",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "aliases": {
        "src": [
            "src"
        ],
        "js-report-builder": [
            "externals/js-report-builder/src/lib",
            "node_modules/js-report-builder/src/lib",
            "node_modules/jsd-report/build"
        ],
        "react-controls": [
            "externals/react-controls/src/",
            "node_modules/react-controls/src/"
        ],
        "jspdf": [
            "node_modules/jspdf/dist/"
        ]
    }
}